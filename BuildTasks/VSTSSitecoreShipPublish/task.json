{
  "id": "e5bd7351-5d7f-4e5c-a0bc-7341f9c4962b",
  "name": "VSTSSitecoreShipPublishTask",
  "friendlyName": "Sitecore Ship Publish Task",
  "description": "Helps you publish .update files to a Sitecore instance from Powershell assuming you are using the Sitecore.Ship module",
  "author": "stevevandenbush",
  "helpMarkDown": "link to help",
  "category": "Deploy",
  "visibility": [
    "Build",
    "Release"
  ],
  "demands": [
        "DotNetFramework"
    ],
  "version": {
    "Major": "2",
    "Minor": "0",
    "Patch": "0"
  },
  "minimumAgentVersion": "1.83.0",
  "instanceNameFormat": "VSTSSitecoreShipPublishTask",
  "groups": [
        {
            "name":"advanced",
            "displayName":"Advanced",
            "isExpanded":false
        }
    ],
  "inputs": [
    {
      "name": "SiteUrl",
      "type": "string",
      "label": "Site Url",
      "defaultValue":"",
      "required":true,
      "helpMarkDown": "Url for the site you are installing the .update package on (ex: _http://mysite.dev_)"
    },
    {
        "name": "PublishTargets",
        "type": "string",
        "label": "Publish Targets",
        "defaultValue":"",
        "required":false,
        "helpMarkDown": "The db targets for the publish (ex: preview, web)",
    },
    {
        "name": "PublishMode",
        "type": "string",
        "label": "Publish Mode",
        "defaultValue":"smart",
        "required":false,
        "helpMarkDown": "The publish mode (ex: smart, full or incremental)",
    },
    {
        "name": "ConnectionTimeOutInSeconds",
        "type": "string",
        "label": "Connection Timeout",
        "defaultValue":"300",
        "required":false,
        "helpMarkDown": "Connection Timeout in seconds (ex: 300)",
        "groupName":"advanced"
    },
    {
      "name": "MaxTimeOutInSeconds",
      "type": "string",
      "label": "Max Timeout",
      "defaultValue": "900",
      "required": false,
      "helpMarkDown": "Max Timeout in seconds  (ex: 900)",
      "groupName":"advanced"
    },
	{
      "name": "Username",
      "type": "string",
      "label": "Username",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Insert Username here",
      "groupName":"advanced"
    },
	{
      "name": "Password",
      "type": "string",
      "label": "Password",
      "defaultValue": "",
      "required": false,
      "helpMarkDown": "Insert Password here, also suggested that in order to keep password hidden, use _$(secretVariable)_ instead of plain text",
      "groupName":"advanced"
    }
  ],
  "execution": {
    "powershell": {
      "target": "$(currentDirectory)\\publish-sitecorepackage.ps1",
      "argumentFormat": "",
      "workingDirectory": "$(currentDirectory)"
    }
  }
}
